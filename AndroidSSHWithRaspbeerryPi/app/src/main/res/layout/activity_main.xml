<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_margin="10dp"
    tools:context=".MainActivity">
    <GridLayout
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:useDefaultMargins="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <Button
            android:id="@+id/start_motor"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="커튼 내리기"
            android:onClick="blindDown"
            android:background="@color/main"
            />
        <Button
            android:id="@+id/stop_motor"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="@id/start_motor"
            app:layout_constraintStart_toEndOf="@id/start_motor"

            android:text="멈추기"
            android:onClick="blindStop"
            android:background="@color/main"
            />
        <Button
            android:id="@+id/reverse_motor"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="@id/start_motor"
            app:layout_constraintStart_toEndOf="@id/stop_motor"
            android:text="커튼 올리기"
            android:onClick="blindUp"
            android:background="@color/main"
            />
        <Button
            android:id="@+id/refresh_ssh"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="새로고침"
            android:onClick="refresh"
            android:background="@color/main"
            app:layout_constraintTop_toTopOf="@id/start_motor"
            app:layout_constraintStart_toEndOf="@id/reverse_motor"
            />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>